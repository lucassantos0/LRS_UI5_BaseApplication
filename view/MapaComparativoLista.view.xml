<mvc:View 	controllerName="lrs.ui5.controller.MapaComparativoLista" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:fb="sap.ui.comp.filterbar" xmlns:core="sap.ui.core" xmlns:f="sap.f" height="100%">
			<Page title="Mapa Comparativo" showNavButton="false">
				<headerContent>
					<Image src="./images/logo.png" height="35px"/>
				</headerContent>			
				<content>
					<VBox>
						<l:DynamicSideContent
							id="DynamicSideContent"
							class="sapUiDSCExplored sapUiContentPadding"
							containerQuery="true"
							equalSplit="true"
							breakpointChanged="updateToggleButtonState">	
						<l:mainContent>				
							<l:VerticalLayout id="containerLayout" width="100%">
								<l:BlockLayout id="BlockLayout" background="Default">
									<l:BlockLayoutRow>
										<l:BlockLayoutCell title="Consultar Evento">
											<VBox>
												<Input type="Text" placeholder="Digite o DocumentId. Ex.:Doc1234578901" id="DocId" width="100%"/>
												<Button text="Buscar" icon="sap-icon://search" press="onSearch"/>
											</VBox>
										</l:BlockLayoutCell>
										<l:BlockLayoutCell title="Taxa Selic">
												<Input type="Text" placeholder="" id="Selic" width="60%"/>
										</l:BlockLayoutCell>										
									</l:BlockLayoutRow>
								</l:BlockLayout>
							</l:VerticalLayout>
					</l:mainContent>								
					<l:sideContent>
					<FlexBox
						height="180px"
						alignItems="Center"
						justifyContent="Center">
						<items>
							<Image src="./images/SAP_Ariba_logo.png" densityAware="false" height="100px" press="openAriba"/>
						</items>
					</FlexBox>										
					</l:sideContent>
				</l:DynamicSideContent>						
						<List id="listaRfqs"
						      headerText="RFQs" 
							  items="{listaRfqs>/listaRfqs}">	
							<ObjectListItem title="{listaRfqs>DocId} - {listaRfqs>EventTitle}" type="Active" press="onListItemPress">
								<firstStatus>
									<ObjectStatus text="Tipo de Compra: {listaRfqs>TipoCompra}"/>
								</firstStatus>
								<secondStatus>
									<ObjectStatus text="Data Criação: {listaRfqs>DataInicial}"/>
								</secondStatus>								
								<attributes>
									<ObjectAttribute text="WorkspaceId: {listaRfqs>Workspace} - {listaRfqs>ProjectTitle}"/>																											
								</attributes>
							</ObjectListItem>
						</List>
					</VBox>
				</content>
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
					</Toolbar>
				</footer>
			</Page>
</mvc:View>