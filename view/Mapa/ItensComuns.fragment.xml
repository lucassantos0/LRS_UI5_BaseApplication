<core:FragmentDefinition
	xmlns:m="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:l="sap.ui.layout">
	<m:Table
		class="sapUiSizeCompact"
		inset="false"
		items="{
			path: 'mcdetails>/suppliers' 
		}">
		<m:columns>
			<m:Column width="20em">
				<m:Text text="Fornecedor" />
			</m:Column>
			<m:Column
				hAlign="End"
				width="8em">
				<m:Text text="Valor cotação" />
			</m:Column>
			<m:Column
				hAlign="Center"
				width="9em">
				<m:Text text="Itens respondidos" />
			</m:Column>
			<m:Column
				hAlign="Center"
				width="9em">
				<m:Text text="Itens premiados" />
			</m:Column>
			<m:Column
				hAlign="End"
				width="8em">
				<m:Text text="Valor premiado" />
			</m:Column>
			<m:Column
				hAlign="Center"
				width="6em">
				<m:Text text="% itens" />
			</m:Column>
			<m:Column
				hAlign="Center"
				width="6em">
				<m:Text text="% valor" />
			</m:Column>
		</m:columns>
		<m:items>
			<m:ColumnListItem>
				<m:cells>
					<m:Text
						text="{
							parts: [ { path: 'mcdetails>id' }, { path : 'mcdetails>name' } ],
							formatter: '.TabelaConfiguracaoFornecedoresNome' 
					}" />
					<m:Text
						visible="{mcdetails>applyCalc}"
						text="{
					    parts: [
					        {path: 'mcdetails>common/quoteprice'}, 
					        {path: 'BRL'}
					    ],
					    type: 'sap.ui.model.type.Currency',
					    formatOptions: {
					    	decimalSeparator : ',', 
					    	groupingSeparator : '.',
					        showMeasure: false
					    }
					}" />
					<m:Text
						visible="{mcdetails>applyCalc}"
						text="{mcdetails>common/quoteitems} / {Control>/AnaliseItem/CommonAwardedItems}" />
					<m:Text
						visible="{mcdetails>applyCalc}"
						text="{mcdetails>common/awardeditems} / {Control>/AnaliseItem/CommonAwardedItems}" />
					<m:Text
						visible="{mcdetails>applyCalc}"
						text="{parts: [
					        {path: 'mcdetails>common/awardedprice'}, 
					        {path: 'BRL'}
					    ],
					    type: 'sap.ui.model.type.Currency',
					    formatOptions: {
					    	decimalSeparator : ',', 
					    	groupingSeparator : '.',
					        showMeasure: false
					    }
						}" />
					<m:Text
						visible="{mcdetails>applyCalc}"
						text="{mcdetails>common/distawarditems}" />
					<m:Text
						visible="{mcdetails>applyCalc}"
						text="{mcdetails>common/distawardprice}" />
				</m:cells>
			</m:ColumnListItem>
		</m:items>
	</m:Table>
</core:FragmentDefinition>