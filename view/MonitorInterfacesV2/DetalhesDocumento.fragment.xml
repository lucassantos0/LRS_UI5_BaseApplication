<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form">
	<Dialog
		contentWidth="640px"
		contentHeight="480px">
		<customHeader>
			<Toolbar>
				<ToolbarSpacer />
				<Label text="{fluxoDocumentos>id}" />
				<ToolbarSpacer />
				<Button
					icon="sap-icon://decline"
					press="onCloseDetalhesDocumento" />
			</Toolbar>
		</customHeader>
		<content>
			<f:GridList
				id="gridList"
				headerText="Mensagens"
				items="{fluxoDocumentos>integrationDetails}">
				<CustomListItem>
					<VBox height="100%">
						<VBox class="sapUiSmallMargin">
							<layoutData>
								<FlexItemData
									growFactor="1"
									shrinkFactor="0" /><!-- Don't shrink below minimum size. Fill space 
									if available. -->
							</layoutData>
							<form:SimpleForm id="SimpleFormDisplay471"
								editable="false"
								layout="ResponsiveGridLayout"
								labelSpanXL="3"
								labelSpanL="3"
								labelSpanM="3"
								labelSpanS="10"
								adjustLabelSpan="false"
								emptySpanXL="1"
								emptySpanL="1"
								emptySpanM="1"
								emptySpanS="0"
								columnsXL="1"
								columnsL="1"
								columnsM="1" >
								<form:content>
									<Label text="ID" />
									<Text text="{fluxoDocumentos>id}" />
									<Label text="Tipo Doc" />
									<Text text="{fluxoDocumentos>type}/{fluxoDocumentos>documentDetail}" />
									<Label text="Sentido" />
									<Text text="{fluxoDocumentos>direction}" />
									<Label text="Processamento" />
									<Text text="{fluxoDocumentos>date} {fluxoDocumentos>time}" />
									<Label text="Mensagem" />
									<Text text="{fluxoDocumentos>message}" />
									<Label text="Status" />
									<Text text="{fluxoDocumentos>status}" />
								</form:content>
							</form:SimpleForm>	
						</VBox>
					</VBox>
				</CustomListItem>
			</f:GridList>
		</content>
	</Dialog>
</core:FragmentDefinition>