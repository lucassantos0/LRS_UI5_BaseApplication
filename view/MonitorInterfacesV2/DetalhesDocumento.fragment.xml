<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core">
	<Dialog
		contentWidth="640px"
		contentHeight="480px">
		<customHeader>
			<Toolbar>
				<ToolbarSpacer />
				<Label text="{fluxoDocumentos>id}" />
				<ToolbarSpacer />
				<Button
					icon="sap-icon://decline"
					press="onCloseDetalhesDocumento" />
			</Toolbar>
		</customHeader>
		<content>
			<f:GridList
				id="gridList"
				headerText="Mensagens"
				items="{ path: 'fluxoDocumentos>integrationDetails/' }">
				<CustomListItem>
					<VBox height="100%">
						<VBox class="sapUiSmallMargin">
							<layoutData>
								<FlexItemData
									growFactor="1"
									shrinkFactor="0" /><!-- Don't shrink below minimum size. Fill space 
									if available. -->
							</layoutData>
							<Title
								text="{integrationDetails>id}"
								wrapping="true" />
							<Label
								text="{integrationDetails>documentDetails}"
								wrapping="true" />
						</VBox>
					</VBox>
				</CustomListItem>
			</f:GridList>
		</content>
	</Dialog>
</core:FragmentDefinition>