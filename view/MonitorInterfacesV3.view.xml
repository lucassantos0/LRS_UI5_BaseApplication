<mvc:View
	controllerName="lrs.ui5.controller.MonitorInterfacesV3"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:fb="sap.ui.comp.filterbar"
	xmlns:core="sap.ui.core" xmlns:f="sap.f" height="100%"
	xmlns:t="sap.ui.table">
				<fb:FilterBar search="onSearch"
					showFilterConfiguration="false">
					<fb:filterItems>
						<fb:FilterItem name="A" label="Data">
							<fb:control>
								<DateRangeSelection id="filtroDataCriacao" displayFormat="dd/MM/yyyy"/>
							</fb:control>
						</fb:FilterItem>					
						<fb:FilterItem name="B" label="Status">
							<fb:control>
								<Select id="filtroStatus" items="{/VH_StatusSet}">
									<core:Item key="{Value}" text="{Description}" />
								</Select>
							</fb:control>
						</fb:FilterItem>
						<fb:FilterItem name="C" label="Direção">
							<fb:control>
								<Select id="filtroDirecao" items="{/VH_DirectionSet}">
									<core:Item key="{Value}" text="{Description}" />
								</Select>
							</fb:control>
						</fb:FilterItem>
						<fb:FilterItem name="D" label="Tipo">
							<fb:control>
								<Select id="filtroTipo" items="{/VH_TypeSet}">
									<core:Item key="{Value}" text="{Description}" />
								</Select>
							</fb:control>
						</fb:FilterItem>
						<fb:FilterItem name="E" label="Produto">
							<fb:control>
								<Select id="filtroProduto" items="{/VH_ProductSet}">
									<core:Item key="{Value}" text="{Description}" />
								</Select>
							</fb:control>
						</fb:FilterItem> 
						<fb:FilterItem name="F" label="Processo">
							<fb:control>
								<Select id="filtroProcesso" items="{/VH_ProcessSet}">
									<core:Item key="{Value}" text="{Description}" />
								</Select>
							</fb:control>
						</fb:FilterItem>
						<fb:FilterItem name="G" label="Documento">
							<fb:control>
								<Input id="filtroDocumento"></Input>
							</fb:control>
						</fb:FilterItem>						
					</fb:filterItems>
				</fb:FilterBar>
				<t:Table id="tableList" selectionMode="None" enableBusyIndicator="true" 
					class="sapUiResponsiveMargin" rows="{monitorV3>/lista}">
					<t:columns>
						<t:Column width="6rem">
							<Label text="Status" />
							<t:template>
								<HBox justifyContent="SpaceBetween">
									<Text text="{monitorV3>StatusDesc}" wrapping="false" />
									<core:Icon src="sap-icon://color-fill"
										color="{monitorV3>StatusColr}" visible="true" />
								</HBox>
							</t:template>
						</t:Column>
						<t:Column width="8rem">
							<Label text="Documento" />
							<t:template>
								<Text text="{monitorV3>Document}" />
							</t:template>
						</t:Column>
						<t:Column width="10rem">
							<Label text="Processo" />
							<t:template>
								<Text text="{monitorV3>ProcessDesc}" />
							</t:template>
						</t:Column>
						<t:Column width="6rem">
							<Label text="Direção" />
							<t:template>
								<Text text="{monitorV3>DirectionDesc}" />
							</t:template>
						</t:Column>
						<t:Column width="6rem">
							<Label text="Tipo" />
							<t:template>
								<Text text="{monitorV3>TypeDesc}" />
							</t:template>
						</t:Column>
						<t:Column width="6rem">
							<Label text="Data" />
							<t:template>
								<Text text="{
									path: 'Date',
									type: 'sap.ui.model.type.Date',
         							formatOptions: {
           								pattern: 'dd/MM/yyyy', UTC: true
         							}}" />
							</t:template>
						</t:Column>
						<t:Column width="6rem">
							<Label text="Hora" />
							<t:template>
								<Text text="{
									path: 'monitorV3>Time', 
									  type: 'sap.ui.model.odata.type.Time',
									  formatOptions: {  
									    pattern : 'HH:mm:ss'
									  }
								}" />
							</t:template>
						</t:Column>
						<t:Column width="26rem">
							<Label text="Mensagem" />
							<t:template>
								<Text text="{monitorV3>Message}" />
							</t:template>
						</t:Column>
					</t:columns>
				</t:Table>
</mvc:View>