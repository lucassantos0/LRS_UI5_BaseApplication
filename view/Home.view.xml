<mvc:View controllerName="lrs.ui5.controller.Home" xmlns="sap.m"
	xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc">
	<Page showHeader="false">
		<l:BlockLayout id="BlockLayout" background="Light">
			<l:BlockLayoutRow>
				<l:BlockLayoutCell class="sapUiNoContentPadding">
					<Image src="./images/homeImage.png" width="100%" />
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
			<l:BlockLayoutRow rowColorSet="ColorSet1"
				class="shopAdministrationTitle">
				<l:BlockLayoutCell
					class="sapUiResponsiveContentPadding sapUiSmallMarginBegin" title="{i18n>shopAdminTitle}"
					titleAlignment="Left" />
			</l:BlockLayoutRow>
			<l:BlockLayoutRow rowColorSet="ColorSet2">
				<l:BlockLayoutCell>
					<l:VerticalLayout>
						<core:Icon src="sap-icon://area-chart" size="2.5rem"
							color="#346187" />
						<Title text="{i18n>
							tile1Title}" titleStyle="H2"
							class="sapUiTinyMarginTopBottom" />
							<Text text="{i18n>
								tile1Content}" class="sapUiTinyMarginBottom" />
								<Link text="{i18n>
									tile1Action1}" press="navToTile1Action1" />
									<Link text="{i18n>tile1Action2}" press="navToTile1Action2" />
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell>
					<l:VerticalLayout>
						<core:Icon src="sap-icon://inspection" size="2.5rem"
							color="#346187" />
						<Title text="{i18n>
							tile2Title}" titleStyle="H2"
							class="sapUiTinyMarginTopBottom" />
							<Text text="{i18n>
								tile2Content}" class="sapUiTinyMarginBottom" />
								<Link text="{i18n>tile2Action1}" press="navToNotasServicoVisualizar" />
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell>
					<l:VerticalLayout>
						<core:Icon src="sap-icon://my-sales-order" size="2.5rem"
							color="#346187" />
						<Title text="{i18n>
							tile3Title}" titleStyle="H2"
							class="sapUiTinyMarginTopBottom" />
							<Text text="{i18n>
								tile3Content}" class="sapUiTinyMarginBottom" />
								<Link text="{i18n>tile3Action1}" press="navToMapaComparativo" />
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell>
					<l:VerticalLayout>
						<core:Icon src="sap-icon://map-2" size="2.5rem" color="#346187" />
						<Title text="{i18n>
							tile4Title}" titleStyle="H2"
							class="sapUiTinyMarginTopBottom" />
							<Text text="{i18n>
								tile4Content}" class="sapUiTinyMarginBottom" />
								<Link text="{i18n>tile4Action1}" />
					</l:VerticalLayout>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
			<l:BlockLayoutRow rowColorSet="ColorSet2">
				<!-- <l:BlockLayoutCell> <l:VerticalLayout> <core:Icon src="sap-icon://thumb-up" 
					size="2.5rem" color="#346187" /> <Title text="{i18n>socialMediaTitle}" titleStyle="H2" 
					class="sapUiTinyMarginTopBottom" /> <Text text="{i18n>socialMediaContent}" 
					class="sapUiTinyMarginBottom" /> <Link text="{i18n>accessLink}" /> <Link 
					text="{i18n>learnLink}" /> </l:VerticalLayout> </l:BlockLayoutCell> -->
				<l:BlockLayoutCell class="sapUiNoContentPadding"
					width="3">
					<Table items="{path: ' customer>
						/customers', templateShareable: false}"
						class="customerTable
						sapUiContentPadding">
						<headerToolbar>
							<Toolbar design="Transparent">
								<Title text="{i18n>customerOverviewTitle}" />
							</Toolbar>
						</headerToolbar>
						<columns>
							<Column>
								<Text text="{i18n>customerName}" />
							</Column>
							<Column minScreenWidth="Tablet">
								<Text text="{i18n>productId}" />
							</Column>
							<Column minScreenWidth="Desktop" hAlign="End">
								<Text text="{i18n>lastPurchase}" />
							</Column>
							<Column hAlign="Center">
								<Text text="{i18n>payment}" />
							</Column>
							<Column hAlign="End">
								<Text text="{i18n>amount}" />
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<Text text="{customer>name}" />
									<Text text="{customer>productId}" />
									<Text text="{customer>lastPurchase}" />
									<ObjectNumber number="{customer>
										payment}" state="{customer>state}" />
										<ObjectNumber
											number="{
												parts:[{path:'customer>amount'},{path:'customer>currencyCode'}],
												type: 'sap.ui.model.type.Currency',
												formatOptions: {showMeasure: false}
											}"
											unit="{customer>currencyCode}" />
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
		</l:BlockLayout>
	</Page>
</mvc:View>