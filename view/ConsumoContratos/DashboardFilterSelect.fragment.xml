<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:mc="sap.suite.ui.microchart"
	xmlns:core="sap.ui.core"
	xmlns:viz="sap.viz.ui5.controls"
	xmlns:layout="sap.ui.layout"
	xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
	xmlns:viz.data="sap.viz.ui5.data">
	<Dialog
		contentWidth="1024px"
		contentHeight="720px"
		title="Visão sintética">
		<content>
			<Panel
				expandable="true"
				expanded="false"
				width="auto"
				headerText="Programas de remessa vencendo nos próximos 90 dias: 100"
				class="sapUiResponsiveMargin">
				<content>
					<GenericTile
						press="press"
						header="60 dias"
						frameType="OneByOne">
						<tileContent>
							<TileContent footer="Total: 70">
								<content>
									<mc:RadialMicroChart
										percentage="70%"
										valueColor="Good" />
								</content>
							</TileContent>
						</tileContent>
					</GenericTile>
					<GenericTile
						press="press"
						header="30 dias"
						frameType="OneByOne">
						<tileContent>
							<TileContent footer="Total: 30">
								<content>
									<mc:RadialMicroChart
										percentage="30%"
										valueColor="Neutral" />
								</content>
							</TileContent>
						</tileContent>
					</GenericTile>
					<GenericTile
						press="press"
						header="7 dias"
						frameType="OneByOne">
						<tileContent>
							<TileContent footer="Total: 3">
								<content>
									<mc:RadialMicroChart
										percentage="5%"
										valueColor="Error" />
								</content>
							</TileContent>
						</tileContent>
					</GenericTile>
				</content>
			</Panel>
			<Panel
				expandable="true"
				expanded="false"
				width="auto"
				headerText="Materiais em programas de remessa expirando"
				class="sapUiResponsiveMargin">
				<content>
				</content>
			</Panel>
		</content>
	</Dialog>
</core:FragmentDefinition>