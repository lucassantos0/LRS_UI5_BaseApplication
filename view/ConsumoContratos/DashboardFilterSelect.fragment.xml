<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:mc="sap.suite.ui.microchart"
	xmlns:core="sap.ui.core">
	<Dialog
		contentWidth="1024px"
		contentHeight="720px"
		title="Visão sintética">
		<content>
			<Panel
				width="auto"
				class="sapUiResponsiveMargin">
				<content>
					<Text
						text="Contratos vencendo nos próximos 90 dias: 100" />
					<GenericTile
						press="press"
						header="60 dias"
						frameType="OneByOne">
						<tileContent>
							<TileContent footer="Total: 70">
								<content>
									<mc:RadialMicroChart
										percentage="70%"
										valueColor="Good" />
								</content>
							</TileContent>
						</tileContent>
					</GenericTile><GenericTile
						press="press"
						header="30 dias"
						frameType="OneByOne">
						<tileContent>
							<TileContent footer="Total: 30">
								<content>
									<mc:RadialMicroChart
										percentage="30%"
										valueColor="Neutral" />
								</content>
							</TileContent>
						</tileContent>
					</GenericTile><GenericTile
						press="press"
						header="7 dias"
						frameType="OneByOne">
						<tileContent>
							<TileContent footer="Total: 3">
								<content>
									<mc:RadialMicroChart
										percentage="5%"
										valueColor="Error" />
								</content>
							</TileContent>
						</tileContent>
					</GenericTile>
				</content>
			</Panel>
			<Panel
				width="auto"
				class="sapUiResponsiveMargin">
				<content>
					<Text
						text="PR vencendo nos próximos 30 dias por: fornecedores/materiais/grupo de materiais" />
				</content>
			</Panel>
			<Panel
				width="auto"
				class="sapUiResponsiveMargin">
				<content>
					<Text
						text="Contratos com alguma linha acima de 90%: fornecedores/materiais/grupo de materiais" />
				</content>
			</Panel>
			<Panel
				width="auto"
				class="sapUiResponsiveMargin">
				<content>
					<Text
						text="PR com alguma linha acima de 90%: fornecedores/materiais/grupo de materiais" />
				</content>
			</Panel>
		</content>
	</Dialog>
</core:FragmentDefinition>