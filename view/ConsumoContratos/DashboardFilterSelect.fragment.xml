<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:mc="sap.suite.ui.microchart"
	xmlns:core="sap.ui.core"
	xmlns:viz="sap.viz.ui5.controls"
	xmlns:layout="sap.ui.layout"
	xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
	xmlns:viz.data="sap.viz.ui5.data">
	<Dialog
		contentWidth="1024px"
		contentHeight="720px"
		title="Visão sintética">
		<content>
			<Panel
				expandable="true"
				expanded="false"
				width="auto"
				headerText="Programas de remessa vencendo nos próximos 90 dias: 100"
				class="sapUiResponsiveMargin">
				<content>
					<GenericTile
						press="press"
						header="60 dias"
						frameType="OneByOne">
						<tileContent>
							<TileContent footer="Total: 70">
								<content>
									<mc:RadialMicroChart
										percentage="70%"
										valueColor="Good" />
								</content>
							</TileContent>
						</tileContent>
					</GenericTile>
					<GenericTile
						press="press"
						header="30 dias"
						frameType="OneByOne">
						<tileContent>
							<TileContent footer="Total: 30">
								<content>
									<mc:RadialMicroChart
										percentage="30%"
										valueColor="Neutral" />
								</content>
							</TileContent>
						</tileContent>
					</GenericTile>
					<GenericTile
						press="press"
						header="7 dias"
						frameType="OneByOne">
						<tileContent>
							<TileContent footer="Total: 3">
								<content>
									<mc:RadialMicroChart
										percentage="5%"
										valueColor="Error" />
								</content>
							</TileContent>
						</tileContent>
					</GenericTile>
				</content>
			</Panel>
			<Panel
				expandable="true"
				expanded="false"
				width="auto"
				headerText="Materiais em programas de remessa expirando - consumo"
				class="sapUiResponsiveMargin">
				<content>
					<layout:FixFlex
						minFlexSize="250">
						<!--Below is the setting panel -->
						<layout:flexContent>
							<viz:VizFrame
								id="idVizFrame"
								uiConfig="{applicationSet:'fiori'}"
								height='100%'
								width="100%"
								vizType='column'>
								<viz:dataset>
									<viz.data:FlattenedDataset
										data="{chart>/milk}">
										<viz.data:dimensions>
											<viz.data:DimensionDefinition
												name="Week"
												value="{chart>Week}" />
										</viz.data:dimensions>
										<viz.data:measures>
											<viz.data:MeasureDefinition
												name="Revenue"
												value="{chart>Revenue}" />
											<viz.data:MeasureDefinition
												name="Cost"
												value="{chart>Cost}" />
										</viz.data:measures>
									</viz.data:FlattenedDataset>
								</viz:dataset>
								<viz:feeds>
									<viz.feeds:FeedItem
										id='valueAxisFeed'
										uid="valueAxis"
										type="Measure"
										values="Seasons" />
									<viz.feeds:FeedItem
										id='categoryAxisFeed'
										uid="categoryAxis"
										type="Dimension"
										values="Revenue" />
								</viz:feeds>
							</viz:VizFrame>
						</layout:flexContent>
					</layout:FixFlex>
				</content>
			</Panel>
		</content>
	</Dialog>
</core:FragmentDefinition>