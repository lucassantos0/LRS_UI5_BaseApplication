<mvc:View
	controllerName="lrs.ui5.controller.PortalFornecedor"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns="sap.m">
	<Page
		showNavButton="true"
		navButtonPress="onNavBack">	
	<ObjectHeader
		title="Portal do Fornecedor"
		condensed="true">
		<attributes>
			<ObjectAttribute text="Seja bem-vindo ao Portal do Fornecedor, uma área com vários serviços a sua disposição!" />
		</attributes>
	</ObjectHeader>
	<l:Grid defaultSpan="L4 M6 S6" class="sapUiSmallMarginTop">
		<l:content>
			<ObjectListItem id="FornApp1"
				title="Prévias"
				intro="Central de Prévias"
				icon="sap-icon://shipping-status" 
				type="Active"
				press="onPreviaPress">
				<layoutData>
					<l:GridData span="L6 M12 S12" />
				</layoutData>				
			</ObjectListItem>
			<ObjectListItem id="FornApp2"
				title="Aplicativo 2"
				intro="Possibilidade de colocar apps/links do cliente"
				icon="sap-icon://bar-code" 
				type="Active"
				press="onAppsPress">
				<layoutData>
					<l:GridData span="L6 M12 S12" />
				</layoutData>				
			</ObjectListItem>
			<ObjectListItem id="FornApp3"
				title="Aplicativo 3"
				icon="sap-icon://customer-view" 
				type="Active"
				press="onAppsPress">	
				<layoutData>
					<l:GridData span="L4 M6 S6" />
				</layoutData>							
			</ObjectListItem>
			<ObjectListItem id="FornApp4"
				title="Aplicativo 4"
				icon="sap-icon://machine" 
				type="Active"
				press="onAppsPress">
				<layoutData>
					<l:GridData span="L4 M6 S6" />
				</layoutData>									
			</ObjectListItem>
			<ObjectListItem id="FornApp5"
				title="Aplicativo 5"
				icon="sap-icon://simulate" 
				type="Active"
				press="onAppsPress">	
				<layoutData>
					<l:GridData span="L4 M6 S6" />
				</layoutData>								
			</ObjectListItem>
			<ObjectListItem id="FornApp6"
				title="Aplicativo 6"
				icon="sap-icon://tools-opportunity" 
				type="Active"
				press="onAppsPress">				
				<layoutData>
					<l:GridData span="L6 M12 S12" />
				</layoutData>
			</ObjectListItem>
			<ObjectListItem id="FornApp7"
				title="Aplicativo 7"
				icon="sap-icon://database" 
				type="Active"
				press="onAppsPress">				
				<layoutData>
					<l:GridData span="L6 M12 S12" />
				</layoutData>
			</ObjectListItem>
			<UploadCollection id="uploadCollection" 
			                  items="{ZMMARIBA>AnexoContratoNavigation}"  
			                  noDataText="Nenhum anexo"
			                  sameFilenameAllowed="false"
			                  instantUpload="false"
			                  multiple="false"
			                  terminationEnabled="false"
			                  uploadEnabled="false" 
			                  title="Teste">	
			    <layoutData>
					<l:GridData span="L12 M12 S12" />
				</layoutData>						   
				<items>
					<UploadCollectionItem 
					    id="idUploadListItems"
                		documentId="{ZMMARIBA>NUM}" fileName="{ZMMARIBA>FILENAME}" mimeType="{ZMMARIBA>MIMETYPE}"				
						url="/sap/opu/odata/sap/ZMM_ARIBA_SRV/FileProcessSet(Id='{ZMMARIBA>Id}',NUM='{ZMMARIBA>NUM}')/$value"									
						enableEdit="false" visibleDelete="true"	visibleEdit="false"/>
				</items>
				<parameters />						
			</UploadCollection>   			
		</l:content>
	</l:Grid>
	</Page>	
</mvc:View>