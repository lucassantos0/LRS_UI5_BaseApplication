<mvc:View
	controllerName="lrs.ui5.controller.PortalFornecedor"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns="sap.m">
	<ObjectPageHeader id="headerForTest"
					  headerDesign="Light"
					  objectTitle="Denise Smith"
					  showTitleSelector="true"
					  showMarkers="true"
					  markFavorite="true"
					  markFlagged="true"
					  markChanges="true"
					  markChangesPress="handleMarkChangesPress"
					  objectSubtitle="Senior Developer"
					  objectImageURI="test-resources/sap/uxap/images/imageID_273624.png"
					  objectImageShape="Circle"
					  isObjectIconAlwaysVisible="false"
					  isObjectTitleAlwaysVisible="false"
					  isObjectSubtitleAlwaysVisible="false"
					  isActionAreaAlwaysVisible="true"
					  showPlaceholder="true">
		<actions>
			<ObjectPageHeaderActionButton text="Public Profile" iconFirst="true" icon="sap-icon://edit" press="handlePress"/>
			<ObjectPageHeaderActionButton text="Take Action" iconFirst="true" icon="sap-icon://action"/>
		</actions>
	</ObjectPageHeader>	
	<l:Grid defaultSpan="L4 M6 S6" class="sapUiSmallMarginTop">
		<l:content>
			<ObjectListItem id="FornApp1"
				title="Prévias"
				intro="Central de Prévias"
				icon="sap-icon://shipping-status" 
				type="Active"
				press="onPreviaPress">
				<layoutData>
					<l:GridData span="L6 M12 S12" />
				</layoutData>				
			</ObjectListItem>
			<ObjectListItem id="FornApp2"
				title="Aplicativo 2"
				intro="Possibilidade de colocar apps do cliente"
				icon="sap-icon://bar-code" 
				type="Active"
				press="onAppsPress">
				<layoutData>
					<l:GridData span="L6 M12 S12" />
				</layoutData>				
			</ObjectListItem>
			<ObjectListItem id="FornApp3"
				title="Aplicativo 3"
				icon="sap-icon://customer-view" 
				type="Active"
				press="onAppsPress">				
			</ObjectListItem>
			<ObjectListItem id="FornApp4"
				title="Aplicativo 4"
				icon="sap-icon://machine" 
				type="Active"
				press="onAppsPress">				
			</ObjectListItem>
			<ObjectListItem id="FornApp5"
				title="Aplicativo 5"
				icon="sap-icon://simulate" 
				type="Active"
				press="onAppsPress">				
			</ObjectListItem>
			<ObjectListItem id="FornApp6"
				title="Aplicativo 6"
				icon="sap-icon://tools-opportunity" 
				type="Active"
				press="onAppsPress">				
				<layoutData>
					<l:GridData span="L6 M12 S12" />
				</layoutData>
			</ObjectListItem>
			<ObjectListItem id="FornApp7"
				title="Aplicativo 7"
				icon="sap-icon://database" 
				type="Active"
				press="onAppsPress">				
				<layoutData>
					<l:GridData span="L6 M12 S12" />
				</layoutData>
			</ObjectListItem>
		</l:content>
	</l:Grid>
</mvc:View>