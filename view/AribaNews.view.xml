<mvc:View
	controllerName="lrs.ui5.controller.AribaNews"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:t="sap.ui.table"
	xmlns="sap.m">
	<Page>
		<HBox>
			<Table
				headerText="SAP Ariba Procurement"
				items="{newsAribaProcurement>/channel/item}">
				<columns>
					<Column />
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<FormattedText
								htmlText="{
								path: 'newsAribaProcurement>content:encoded',
								formatter : '.formatterProxyContent'
							}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
			<Table
				headerText="SAP Ariba Cloud Integration Gateway"
				items="{newsAribaCIG>/channel/item}">
				<columns>
					<Column />
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<FormattedText
								htmlText="{
								path: 'newsAribaCIG>content:encoded',
								formatter : '.formatterProxyContent'
							}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</HBox>
	</Page>
</mvc:View>