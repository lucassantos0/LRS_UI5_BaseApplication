<mvc:View
	controllerName="lrs.ui5.controller.AribaNews"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:t="sap.ui.table"
	xmlns="sap.m">
	<Page>
		<IconTabBar
			id="idIconTabBarNoIcons"
			expanded="true"
			expandable="false"
			class="sapUiResponsiveContentPadding">
			<items>
				<IconTabFilter text="SAP Ariba Procurement">
					<Table
						alternateRowColors="true"
						items="{newsAribaProcurement>/channel/item}">
						<columns>
							<Column />
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<Panel
										expandable="true"
										expanded="false"
										headerText="{newsAribaProcurement>title}"
										width="100%">
										<core:HTML
											content="{
											path: 'newsAribaProcurement>content:encoded',
											formatter : '.formatterProxyContent'
										}" />
									</Panel>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</IconTabFilter>
				<IconTabFilter
					text="SAP Ariba Cloud Integration Gateway">
					<Table
						alternateRowColors="true"
						items="{newsAribaCIG>/channel/item}">
						<columns>
							<Column />
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<Panel
										expandable="true"
										expanded="false"
										headerText="{newsAribaCIG>title}"
										width="100%">
										<core:HTML
											content="{
											path: 'newsAribaCIG>content:encoded',
											formatter : '.formatterProxyContent'
										}" />
									</Panel>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</IconTabFilter>
			</items>
		</IconTabBar>
	</Page>
</mvc:View>