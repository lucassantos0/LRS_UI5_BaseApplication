												formatter : '.formatterProxyContent'
											}" />
										</content>
									</Panel>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</IconTabFilter>
				<IconTabFilter
					text="SAP Ariba Cloud Integration Gateway">
					<Table
						alternateRowColors="true"
						items="{newsAribaCIG>/channel/item}">
						<columns>
							<Column />
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<Panel
										expandable="true"
										expanded="false"
										width="100%">
										<headerToolbar>
											<Toolbar height="3rem">
												<Title text="{newsAribaCIG>title}" />
												<ToolbarSpacer />
												<Text text="{newsAribaCIG>pubDate}" />
											</Toolbar>
										</headerToolbar>
										<content>
											<core:HTML
												content="{
													path: 'newsAribaCIG>content:encoded',
													formatter : '.formatterProxyContent'
												}" />
										</content>
									</Panel>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</IconTabFilter>
				<IconTabFilter text="SAP Ariba Network">
					<Table
						alternateRowColors="true"
						items="{newsAribaNetwork>/channel/item}">
						<columns>
							<Column />
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<Panel
										expandable="true"
										expanded="false"
										width="100%">
										<headerToolbar>
											<Toolbar height="3rem">
												<Title text="{newsAribaNetwork>title}" />
												<ToolbarSpacer />
												<Text text="{newsAribaNetwork>pubDate}" />
											</Toolbar>
										</headerToolbar>
										<content>
											<core:HTML
												content="{
													path: 'newsAribaNetwork>content:encoded',
													formatter : '.formatterProxyContent'
												}" />
										</content>
									</Panel>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</IconTabFilter>
				<IconTabFilter text="SAP Cloud Platform">
					<Table
						alternateRowColors="true"
						items="{newsSAPCloudPlatform>/channel/item}">
						<columns>
							<Column />
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<Panel
										expandable="true"
										expanded="false"
										width="100%">
										<headerToolbar>
											<Toolbar height="3rem">
												<Title text="{newsSAPCloudPlatform>title}" />
												<ToolbarSpacer />
												<Text text="{newsSAPCloudPlatform>pubDate}" />
											</Toolbar>
										</headerToolbar>
										<content>
											<core:HTML
												content="{
													path: 'newsSAPCloudPlatform>content:encoded',
													formatter : '.formatterProxyContent'
												}" />
										</content>
									</Panel>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</IconTabFilter>
			</items>
		</IconTabBar>
	</Page>
</mvc:View>