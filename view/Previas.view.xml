<mvc:View
	controllerName="lrs.ui5.controller.Previas"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:semantic="sap.m.semantic"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<Page
		id="idPrevias"
		title="Central de Prévias"
		showNavButton="true"
		navButtonPress="onNavBack">	
		<SplitContainer>	
		<masterPages>
			<semantic:MasterPage title="Embarques">
				<semantic:sort>
					<semantic:SortSelect>
					</semantic:SortSelect>
				</semantic:sort>
				<semantic:filter>
					<semantic:FilterAction press="onSemanticButtonPress"/>
				</semantic:filter>
				<semantic:group>
					<semantic:GroupAction press="onSemanticButtonPress"/>
				</semantic:group>
				<semantic:addAction>
					<semantic:AddAction press="onSemanticButtonPress"/>
				</semantic:addAction>
				<semantic:content>
					<List
						items="{embarquesFornecedor>/}">
						<items>
							<ObjectListItem
								title="{embarquesFornecedor>ebeln}"
								type="Active"
								press="onSelecionarContrato">
								<firstStatus>
									<ObjectStatus
										visible="{= ${embarquesFornecedor>itemsPorcentagemConsumo} ? true : false }"
										text="{embarquesFornecedor>itemsPorcentagemConsumo}%"
										state="{
											path : 'embarquesFornecedor>itemsPorcentagemConsumo',
											formatter : '.formatterMasterListConsumoStatus'
										}" />
								</firstStatus>
								<attributes>
									<ObjectAttribute text="{
										path: 'embarquesFornecedor>kdate',
										formatter: '.formatterMasterListDate'
									}" />
								</attributes>
							</ObjectListItem>
						</items>
					</List>
				</semantic:content>
			</semantic:MasterPage>
		</masterPages>
		<detailPages>
			<semantic:DetailPage title="{embarquesFornecedor>ebeln}" id="detailPageEmbarques">
				<semantic:content>
				
				</semantic:content>
				<semantic:customFooterContent>
					<Button text="Reajuste" icon="sap-icon://action" press="onPress"/>
					<Button text="Renegociação" icon="sap-icon://action" press="onPress"/>
					<Button text="Aditivo" icon="sap-icon://action" press="onPress"/>
				</semantic:customFooterContent>
			</semantic:DetailPage>
		</detailPages>	
		</SplitContainer>
	</Page>
</mvc:View>