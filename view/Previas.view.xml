<mvc:View
	controllerName="lrs.ui5.controller.Previas"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:semantic="sap.m.semantic"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<Page
		id="idPrevias"
		title="Central de PrÃ©vias"
		showNavButton="true"
		navButtonPress="onNavBack">	
		<SplitContainer>	
		<masterPages>
			<semantic:MasterPage title="Embarques">
				<semantic:sort>
					<semantic:SortSelect>
					</semantic:SortSelect>
				</semantic:sort>
				<semantic:filter>
					<semantic:FilterAction press="onSemanticButtonPress"/>
				</semantic:filter>
				<semantic:group>
					<semantic:GroupAction press="onSemanticButtonPress"/>
				</semantic:group>
				<semantic:addAction>
					<semantic:AddAction press="onSemanticButtonPress"/>
				</semantic:addAction>
				<semantic:content>
					<List
						items="{embarquesFornecedor>/}">
						<items>
							<ObjectListItem
								title="{embarquesFornecedor>id}"
								icon="sap-icon://shipping-status"
								type="Active"
								press="onSelecionarEmbarque">
								<firstStatus>
									<ObjectStatus text="Remessa: {embarquesFornecedor>remessa}" />
								</firstStatus>
								<attributes>
									<ObjectAttribute text="{
										path: 'embarquesFornecedor>data',
										formatter: '.formatterMasterListDate'
									}" />
								</attributes>
							</ObjectListItem>
						</items>
					</List>
				</semantic:content>
			</semantic:MasterPage>
		</masterPages>
		<detailPages>
			<semantic:DetailPage title="{embarquesFornecedor>ebeln}" id="detailPageEmbarques">
				<semantic:content>
					<List
						headerText="Notas Fiscais"
						items="{
							path: 'embarquesFornecedor>items/'
						}">
						<ObjectListItem
						    icon="sap-icon://bar-code"
							title="{embarquesFornecedor>nf}"
							number="{
								parts:[{path:'embarquesFornecedor>valor'},{path:'embarquesFornecedor>moeda'}],
								type: 'sap.ui.model.type.Currency',
								formatOptions: {showMeasure: false}
							}"
							numberUnit="{embarquesFornecedor>moeda}">	
							<firstStatus>
								<ObjectStatus
									text="{embarquesFornecedor>status}"
									state="{
										path: 'embarquesFornecedor>status',
										formatter: 'sap.m.sample.ObjectListItem.Formatter.status'
									}" />		
							</firstStatus>												
							<attributes>
								<ObjectAttribute text="{embarquesFornecedor>obs}" />
							</attributes>		
						</ObjectListItem>
					</List>				
				</semantic:content>
			</semantic:DetailPage>
		</detailPages>	
		</SplitContainer>
	</Page>
</mvc:View>